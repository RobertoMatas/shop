<div class="fields">
  <%= f.label :product %>
  <%= f.collection_select :product_id, Product.all, :id, :name %>

  <%= f.label :quantity %>
  <%= f.number_field :quantity %>

  <%= f.label :unit_price %>
  <%= f.number_field :unit_price, :step => 0.15 %>

  <%= f.hidden_field :id %>
	
	<%= f.hidden_field :_destroy %> 
  <span class="glyphicon glyphicon-remove"></span>
</div>