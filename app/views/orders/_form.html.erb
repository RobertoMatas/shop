<div class="panel-body">
  <div class="row">
    <%= form_for @order, html: { class: "form-horizontal" } do |f| %>
      <% if @order.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

          <ul>
          <% @order.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <% unless @order.new_record? %>  
        <div class="form-group">
          <%= f.label :status, class: "col-sm-2 control-label" %>
          <div class="col-sm-7">
            <%= f.text_field :status, class: "form-control", size: 255 %>
          </div>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.label :payment_method, class: "col-sm-2 control-label" %>
        <div class="col-sm-7">
          <%= f.text_field :payment_method, class: "form-control", size: 255 %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :shipping_address, class: "col-sm-2 control-label" %>
        <div class="col-sm-7">
          <%= f.text_field :shipping_address, class: "form-control", size: 255 %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :shipping_city, class: "col-sm-2 control-label" %>
        <div class="col-sm-7">
          <%= f.text_field :shipping_city, class: "form-control", size: 255 %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :customer_name, class: "col-sm-2 control-label" %>
        <div class="col-sm-7">
          <%= f.text_field :customer_name, class: "form-control", size: 255 %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :customer_last_name, class: "col-sm-2 control-label" %>
        <div class="col-sm-7">
          <%= f.text_field :customer_last_name, class: "form-control", size: 255 %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-7 col-md-offset-2">
          <div id="line_items_fields">
            <%= f.fields_for :line_items do |line_items_fields| %> 
              <%= render 'line_items_fields', :f => line_items_fields %>
            <% end %>
          </div>
          <div class="form-group">
              <div class="col-sm-10">
                <button type="button" class="btn btn-success" id="add_line_items_field" data-index-start-at='<%= @order.line_items.size %>'>
                  <span class="glyphicon glyphicon-plus"></span>
                  <%= t '.add_product' %>
                </button>
              </div>
          </div>
        <button type="submit" name="commit" class="btn btn-primary">
          <span class="glyphicon glyphicon-check"></span>
          <%= t '.submit' %>
        </button>
      </div>
    </div>
    <% end %>
</div>