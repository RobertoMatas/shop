<%= form_for @order, html: { class: "form-horizontal" } do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :status, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :status, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :payment_method, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :payment_method, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :shipping_address, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :shipping_address, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :shipping_city, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :shipping_city, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :customer_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :customer_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :customer_last_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :customer_last_name, class: "form-control" %>
    </div>
  </div>
  <div id="line_items_fields" class="field nested">
    <%= f.fields_for :line_items do |line_items_fields| %> 
      <%= render 'line_items_fields', :f => line_items_fields %>
    <% end %>
  </div>
  
  <a id="add_line_items_field" data-index-start-at='<%= @order.line_items.size %>'>Add Product</a>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
