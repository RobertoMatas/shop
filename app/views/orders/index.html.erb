<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t '.title' %></h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-1">
        <%= link_to new_order_path, class: "btn btn-success" do %>
          <span class="glyphicon glyphicon-plus"></span>
          <%= t '.new_order_link' %> 
        <% end %>
      </div>
      <div class="col-md-2">
        <%= link_to products_path, class: "btn btn-info" do %>
          <span class="glyphicon glyphicon-list-alt"></span>
          <%= t '.view_products_link' %> 
        <% end %>
      </div>
    </div>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th><%= t '.status' %></th>
            <th><%= t '.payment_method' %></th>
            <th><%= t '.shipping_address' %></th>
            <th><%= t '.shipping_city' %></th>
            <th><%= t '.cust_name' %></th>
            <th><%= t '.cust_last_name' %></th>
            <th><%= t '.actions' %></th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.status %></td>
              <td><%= order.payment_method %></td>
              <td><%= order.shipping_address %></td>
              <td><%= order.shipping_city %></td>
              <td><%= order.customer_name %></td>
              <td><%= order.customer_last_name %></td>
              <td>
                <%= link_to order, class: "btn-sm btn-info" do %>
                  <span class="glyphicon glyphicon-list-alt"></span>
                  <%= t '.show' %>
                <% end %>
                &nbsp;|&nbsp;
                <%= link_to edit_order_path(order), class: "btn-sm btn-warning" do %>
                  <span class="glyphicon glyphicon-edit"></span>
                  <%= t '.edit' %>
                <% end %>
                &nbsp;|&nbsp;
                <%= link_to order, method: :delete, class: "btn-sm btn-danger", data: { confirm: 'Are you sure?' } do %>
                  <span class="glyphicon glyphicon-remove"></span>
                  <%= t '.delete' %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>