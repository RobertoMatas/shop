<div class="page-header">
  <h1>Order Detail <small>ID #<%= @order.id %></small></h1>
</div>

<div class="list-group">

  <div class="list-group-item active">
    <h4 class="list-group-item-heading">Status:</h4>
    <p class="list-group-item-text"><%= @order.status %></p>
  </div>

  <div class="list-group-item active">
    <h4 class="list-group-item-heading">Payment method:</h4>
    <p class="list-group-item-text"><%= @order.payment_method %></p>
  </div>

  <div class="list-group-item active">
    <h4 class="list-group-item-heading">Shipping address:</h4>
    <p class="list-group-item-text"><%= @order.shipping_address %></p>
  </div>

  <div class="list-group-item active">
    <h4 class="list-group-item-heading">Shipping city:</h4>
    <p class="list-group-item-text"><%= @order.shipping_city %></p>
  </div>

  <div class="list-group-item active">
    <h4 class="list-group-item-heading">Customer name:</h4>
    <p class="list-group-item-text"><%= @order.customer_name %></p>
  </div>

  <div class="list-group-item active">
    <h4 class="list-group-item-heading">Customer last name:</h4>
    <p class="list-group-item-text"><%= @order.customer_last_name %></p>
  </div>

  <div class="list-group-item active">
    <h4 class="list-group-item-heading">Products:</h4>
    <%= render 'show_line_items_fields' %> 
  </div>

</div>

<div class="row">
  <div class="col-sm-1 col-sm-offset-1">
    <%= link_to orders_path do %>
      <span class="glyphicon glyphicon-chevron-left"></span>
      Back
    <% end %>
  </div>
  <div class="col-sm-1">
    <%= link_to edit_order_path @order do %>
      <span class="glyphicon glyphicon-edit"></span>
      Edit
    <% end %>
  </div>
</div>