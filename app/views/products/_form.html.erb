<div class="panel-body">
  <%= form_for @product, :html => {:multipart => true, :class => "form-horizontal"} do |f| %>
    <% if @product.errors.any? %>
      <div class="alert alert-danger">
        <%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:
        <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><strong><%= msg %></strong></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, class: "col-sm-2 control-label" %>
      <div class="col-sm-5">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description, class: "col-sm-2 control-label" %>
      <div class="col-sm-5">
        <%= f.text_area :description, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :stored_at, class: "col-sm-2 control-label" %>
      <div class="col-sm-5">
        <%= f.datetime_select :stored_at, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :manufacturer, class: "col-sm-2 control-label" %>
      <div class="col-sm-5">
        <%= f.text_field :manufacturer, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :category, class: "col-sm-2 control-label" %>
      <div class="col-sm-5">
        <%= f.text_field :category, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :price, class: "col-sm-2 control-label" %>
      <div class="col-sm-5">
        <%= f.number_field :price, :step => 0.15, size: 255, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :stock, class: "col-sm-2 control-label" %>
      <div class="col-sm-5">
        <%= f.number_field :stock, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :photo, class: "col-sm-2 control-label" %>
      <%= image_tag(@product.photo_url) if @product.photo? %>
      <div class="col-sm-5">
        <%= f.file_field :photo %>
        <%= f.hidden_field :photo_cache %>
        <p class="help-block">Image for product.</p>
      </div>
    </div>

    <div class="col-md-offset-2">
      <button type="submit" name="commit" class="btn btn-primary">
        <span class="glyphicon glyphicon-check"></span>
        Save Product
      </button>
    </div>
    
  <% end %>
</div>