<div class="page-header">
  <h1><small><%= t '.title', product_id: @product.id %></small></h1>
</div>

<div class="list-group">
  
  <div class="list-group-item active">
    <h4 class="list-group-item-heading"><%= t '.name' %>:</h4>
    <%= @product.name %>
  </div>

  <div class="list-group-item active">
    <h4 class="list-group-item-heading"><%= t '.description' %>:</h4>
    <p class="list-group-item-text"><%= @product.description %></p>
  </div>

  <div class="list-group-item active">
    <h4 class="list-group-item-heading"><%= t '.stored_at' %>:</h4>
    <p class="list-group-item-text"><%= l @product.stored_at, format: :short %></p>
  </div>

  <div class="list-group-item active">
    <h4 class="list-group-item-heading"><%= t '.manufacturer' %>:</h4>
    <p class="list-group-item-text"><%= @product.manufacturer %></p>
  </div>

  <div class="list-group-item active">
    <h4 class="list-group-item-heading"><%= t '.category' %>:</h4>
    <p class="list-group-item-text"><%= @product.category %></p>
  </div>

  <div class="list-group-item active">
    <h4 class="list-group-item-heading"><%= t '.stock' %>:</h4>
    <p class="list-group-item-text"><%= @product.stock %></p>
  </div>

  <div class="list-group-item active">
    <h4 class="list-group-item-heading"><%= t '.price' %>:</h4>
    <p class="list-group-item-text"><%= @product.price %></p>
  </div>

  <div class="list-group-item active">
    <h4 class="list-group-item-heading"><%= t '.photo' %>:</h4>
    <div class="thumbnail"><%= image_tag @product.photo_url, {'data-src' => 'holder.js/100%x55'} if @product.photo? %></div>
  </div>

</div>

<div class="row">
  <div class="col-sm-1 col-sm-offset-1">
    <%= link_to products_path do %>
      <span class="glyphicon glyphicon-chevron-left"></span>
      <%= t '.back' %>
    <% end %>
  </div>
  <div class="col-sm-1">
    <%= link_to edit_product_path @product do %>
      <span class="glyphicon glyphicon-edit"></span>
      <%= t '.edit' %>
    <% end %>
  </div>
</div>
