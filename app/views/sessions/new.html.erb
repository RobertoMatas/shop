<%= form_for :signin, html: { :class => "form-signin", :method => "POST" } do |f| %>
	<h2 class="form-signin-heading"><%= t '.title' %></h2>
	<%= f.text_field :email, {:class => 'form-control', :placeholder => t('.email') } %>
	<%= f.password_field :password, {:class => 'form-control', :placeholder => t('.password')} %>
	<%= button_tag t('.submit'), {:class => 'btn btn-lg btn-primary btn-block' } %>
<% end %>